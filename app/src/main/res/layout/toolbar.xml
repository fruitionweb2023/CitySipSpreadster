<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="@color/clr_FFFFFF"
                android:layout_height="68dp">


                <ImageView
                    android:id="@+id/toolbar_back"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="31dp"
                    android:src="@drawable/ic_toolbarbtnback"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/toolbar_logo"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_imgtoolbarlogo"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imgNoti"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="28dp"
                    android:src="@drawable/ic_imgnotification"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/cart_toolbar_added_item_count"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/ic_red_dot"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/clr_E5E5E5"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>


</layout>
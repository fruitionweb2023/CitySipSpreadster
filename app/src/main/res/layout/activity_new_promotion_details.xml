<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_FFFFFF"
        tools:context=".activites.NewPromotionDetailsActivity">


        <LinearLayout
            android:id="@+id/llError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_image"
                android:scaleType="fitXY"/>
        </LinearLayout>


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="75dp"
            android:fillViewport="true">


        <LinearLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clr_FFFFFF"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/imgPromotion"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/bg_image"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal">

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="60"
                     >

                     <TextView
                         android:id="@+id/txtAddress"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/roboto_regular"
                         android:text="Raysan, Gandhinagar"
                         android:maxLines="1"
                         android:ellipsize="end"
                         android:textColor="@color/clr_666666"
                         android:textSize="14sp" />

                 </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="end"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="4.5"
                        android:textColor="@color/clr_333333"
                        android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/ic_star"/>
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
                android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtBusinessName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="La Pino’z Pizza"
                        android:maxLines="1"
                        android:textColor="@color/clr_111111"
                        android:textSize="26sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="17dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/square_box_fill_with_radius"
                    android:orientation="horizontal">



                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <TextView
                          android:id="@+id/txtPercentage"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="12%"
                          android:textSize="24dp"
                          android:textColor="@color/clr_FFFFFF"
                          android:fontFamily="@font/roboto_bold"/>


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Per Order"
                          android:layout_marginTop="6dp"
                          android:textSize="11dp"
                          android:textColor="@color/clr_FFFFFF"
                          android:fontFamily="@font/roboto_regular"/>

                  </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:background="@color/clr_FF6A71"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_gravity="center_vertical">

                      <TextView
                          android:id="@+id/txtOfferTitle"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="40% Off on ₹500 or above order.
Offer valid on selected items."
                          android:textSize="12sp"
                          android:layout_gravity="center_vertical"
                          android:gravity="start"
                          android:maxLines="2"
                          android:ellipsize="end"
                          android:textColor="@color/clr_FFD1D1"
                          android:fontFamily="@font/roboto_regular"/>

                  </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Business"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:textColor="@color/clr_333333"/>

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="‘Lorem ipsum dolor sit amet, consectetur adipisici elit…’ (complete text) is... Read More"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/clr_666666"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:textColor="@color/clr_333333"/>

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/rushabh_patel_gmail_com"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/clr_666666"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:textColor="@color/clr_333333"/>

                    <TextView
                        android:id="@+id/txtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/_91_7622908022"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/clr_666666"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/clr_EEEEEE"/>


            </LinearLayout>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/blMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/clr_FFFFFF"
            android:padding="24dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">


                <Button
                    android:id="@+id/btnAddToMyLead"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Add to My Leads"
                    android:textAllCaps="false"
                    android:textColor="@color/clr_EA2A31"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnPromoteNow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_sixtydp_corner_radius"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Promote Now"
                    android:textAllCaps="false"
                    android:textColor="@color/clr_FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>





        </LinearLayout>
    </RelativeLayout>
</layout>
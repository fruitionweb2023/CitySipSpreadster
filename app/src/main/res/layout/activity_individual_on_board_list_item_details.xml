<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_FFFFFF"
        tools:context=".activites.IndividualOnBoardListItemDetails">


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="75dp"
            android:fillViewport="true">


        <LinearLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/clr_FFFFFF"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtBusinessName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="La Pino’z Pizza"
                    android:maxLines="1"
                    android:textColor="@color/clr_111111"
                    android:textSize="26sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/clr_666666"
                android:textSize="14sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/square_box_fill_with_radius"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12%"
                        android:textSize="24dp"
                        android:textColor="@color/clr_FFFFFF"
                        android:fontFamily="@font/roboto_bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per Order"
                        android:layout_marginTop="6dp"
                        android:textSize="11dp"
                        android:textColor="@color/clr_FFFFFF"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:background="@color/clr_FF6A71"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtOfferTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40% Off on ₹500 or above order.
Offer valid on selected items."
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/clr_FFD1D1"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/clr_DDDDDD"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="16dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_weight="50"
                    android:maxLines="1"
                    android:textColor="@color/clr_555555"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/txtGetDirection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"
                    android:layout_weight="50"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/clr_EA2A31"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/clr_DDDDDD"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="16dp">


                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Raisan, Gandhinagar"
                    android:layout_weight="50"
                    android:maxLines="1"
                    android:textColor="@color/clr_555555"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.0 km"
                    android:layout_weight="50"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/clr_333333"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/clr_DDDDDD"/>


        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/clr_FFFFFF"
            android:padding="24dp">


            <Button
                android:id="@+id/btnGetOnBoard"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_gradiant_background"
                android:fontFamily="@font/roboto_medium"
                android:text="Get Onboard"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>



    </RelativeLayout>
</layout>